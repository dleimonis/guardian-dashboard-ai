# Guardian Dashboard AI - Environment Variables
# Copy this file to .env and fill in your values

# ====================
# Frontend Configuration
# ====================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001/ws
VITE_DESCOPE_PROJECT_ID=your_descope_project_id_here

# ====================
# Backend Configuration
# ====================
PORT=3001
NODE_ENV=development

# ====================
# Database Configuration
# ====================
DATABASE_URL=postgresql://guardian:guardian_pass@localhost:5432/guardian_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=guardian_db
DATABASE_USER=guardian
DATABASE_PASSWORD=guardian_pass

# ====================
# Redis Configuration
# ====================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Queue uses a separate database
REDIS_QUEUE_DB=1

# ====================
# Descope Authentication (REQUIRED for MCP Hackathon)
# ====================
DESCOPE_PROJECT_ID=your_descope_project_id_here
DESCOPE_MANAGEMENT_KEY=your_descope_management_key_here

# ====================
# External API Keys (Stored in Descope Vault in Production)
# ====================

# NASA FIRMS API (Required for fire detection)
# Get your MAP_KEY from: https://firms.modaps.eosdis.nasa.gov/api/area
NASA_API_KEY=DEMO_KEY
NASA_FIRMS_MAP_KEY=your_nasa_firms_map_key_here

# USGS Earthquake API (Public - no key needed)
USGS_API_URL=https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary

# NOAA Weather API (Public - no key needed)
NOAA_API_URL=https://api.weather.gov
NOAA_API_KEY=DEMO_KEY

# ====================
# Notification Services (Optional)
# ====================

# Twilio SMS Configuration
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=optional_messaging_service_sid

# SendGrid Email Configuration
# Get API key from: https://app.sendgrid.com
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=alerts@guardian.ai
SENDGRID_FROM_NAME=Guardian Dashboard AI
SENDGRID_TEMPLATE_ID_ALERT=optional_template_id
SENDGRID_TEMPLATE_ID_WELCOME=optional_template_id

# ====================
# Queue Configuration
# ====================
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# ====================
# Application Settings
# ====================

# Logging
LOG_LEVEL=info
LOG_FILE=combined.log
ERROR_LOG_FILE=error.log

# Agent Configuration
AGENT_PROCESSING_INTERVAL=180000  # 3 minutes in ms
AGENT_SIMULATION_MODE=false       # Set to true to use simulation data

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000      # 30 seconds
WS_MAX_CONNECTIONS=1000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000       # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (in seconds)
CACHE_TTL_DISASTERS=900           # 15 minutes
CACHE_TTL_AGENTS=60              # 1 minute
CACHE_TTL_API_RESPONSES=300      # 5 minutes

# ====================
# Security Settings
# ====================
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:5174
JWT_SECRET=your_jwt_secret_here_for_development_only
SESSION_SECRET=your_session_secret_here_for_development_only

# ====================
# External Service URLs (Optional)
# ====================
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
METRICS_ENDPOINT=https://your-metrics-service.com/api
BACKUP_API_URL=https://backup-disaster-api.com

# ====================
# Feature Flags
# ====================
FEATURE_ENABLE_SMS=true
FEATURE_ENABLE_EMAIL=true
FEATURE_ENABLE_PUSH=false
FEATURE_ENABLE_WEBHOOKS=true
FEATURE_ENABLE_ADMIN_PANEL=true
FEATURE_ENABLE_ANALYTICS=true

# ====================
# Development Settings
# ====================
DEV_SKIP_AUTH=false              # NEVER set to true in production
DEV_VERBOSE_LOGGING=true
DEV_MOCK_EXTERNAL_APIS=false     # Use mock data instead of real APIs
DEV_SEED_DATABASE=true           # Seed database with test data on startup