# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (Get these from respective services)
NASA_API_KEY=your_nasa_api_key_here
USGS_API_URL=https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary
NOAA_API_KEY=your_noaa_api_key_here
GDACS_API_URL=https://www.gdacs.org/gdacsapi/api/events/geteventlist

# Descope Configuration
DESCOPE_PROJECT_ID=your_descope_project_id
DESCOPE_MANAGEMENT_KEY=your_descope_management_key

# Twilio Configuration (for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration (for email alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# WebSocket Configuration
WS_PORT=3002

# Database Configuration (optional, for storing historical data)
DATABASE_URL=postgresql://user:password@localhost:5432/guardian_dashboard

# MCP Server Configuration
MCP_PORT=3002
MCP_SERVER_PORT=3003
MCP_MODE=enabled

# Alert Thresholds
EARTHQUAKE_MIN_MAGNITUDE=2.5
FIRE_MIN_CONFIDENCE=80
WEATHER_SEVERITY_THRESHOLD=3

# Real Data Configuration
USE_REAL_EARTHQUAKE_DATA=true  # Set to false to use simulation only